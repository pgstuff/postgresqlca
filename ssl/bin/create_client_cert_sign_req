#! /bin/bash

set -eu -o pipefail

script_dir="$(dirname "$(readlink -f "$0")")"
base_dir="$(dirname "$script_dir")"
source "$base_dir/var/paths.sh"

function create_client_cert_sign_req() {
    local ca_path=$1
    local client_host_name=$2
    local pass=$3

    exec 3<<<"$pass"
    "$ca_path/bin/create_client_cert_sign_req" "$client_host_name"
}

client_key_pass=$(openssl aes-256-cbc -salt -a -d -k $(cat "$ssl_key_pass_path") -in "$client_key_pass_path")

create_client_cert_sign_req "$ca_client_intermediate_dir" "$1" "$client_key_pass"
