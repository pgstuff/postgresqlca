#! /bin/bash

set -eu -o pipefail

script_dir="$(dirname "$(readlink -f "$0")")"
base_dir="$(dirname "$script_dir")"
source "$base_dir/var/paths.sh"

function sign_client_cert_req() {
    local ca_path=$1
    local client_host_name=$2
    local ca_pass=$3

    exec 3<<<"$ca_pass"
    "$ca_path/bin/sign_client_cert_req" "$client_host_name"
}

ca_client_intermediate_pass=$(openssl aes-256-cbc -salt -a -d -k $(cat "$ssl_key_pass_path") -in "$ca_client_intermediate_pass_path")

sign_client_cert_req "$ca_client_intermediate_dir" "$1" "$ca_client_intermediate_pass"
