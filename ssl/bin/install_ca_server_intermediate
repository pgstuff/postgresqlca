#! /bin/bash

set -eu -o pipefail

script_dir="$(dirname "$(readlink -f "$0")")"
base_dir="$(dirname "$script_dir")"
source "$base_dir/var/paths.sh"

if [ -e "$ca_server_intermediate_dir" ]; then
    echo "The CA server intermediate (\"${ca_server_intermediate_dir}\") exists." >&2
    exit 2
fi

function install_intermediate() {
    local ca_path=$1

    cp -r "$ca_template_dir" "$ca_path"
    chmod 700 "$ca_path/openssl/private"

    echo "intermediate" > "$ca_path/var/ca_chain.var"
    echo "server" > "$ca_path/var/ca_usage.var"
    rm "$ca_path/var/root_common_name.var"
    rm "$ca_path/var/root_cert_days.var"
    rm "$ca_path/var/root_crl_days.var"
    rm "$ca_path/var/intermediate_cert_days.var"
    rm "$ca_path/var/client_"*".var"
}

function create_intermediate() {
    local ca_path=$1
    local ca_pass=$2

    exec 3<<<"$ca_pass"
    "$ca_path/bin/create_ca_key"

    exec 3<<<"$ca_pass"
    "$ca_path/bin/create_ca_cert"
}

if [ -z "${server_intermediate_pass-}" ]; then
    ca_server_intermediate_pass=$(mkpasswd -l 32 -d 4 -c 4 -C 4 -s 4)
    echo "$ca_server_intermediate_pass" | openssl aes-256-cbc -salt -a -e -k $(cat "$ssl_key_pass_path") -out "$ca_server_intermediate_pass_path"
fi

install_intermediate "$ca_server_intermediate_dir"
if [ "${install_edit_vars-0}" -eq 1 ]; then
    "$ca_server_intermediate_dir/bin/edit_vars"
fi
create_intermediate "$ca_server_intermediate_dir" "$ca_server_intermediate_pass"

rm "$ca_server_intermediate_dir/bin/"*_client_*
rm "$ca_server_intermediate_dir/bin/sign_intermediate_ca"
