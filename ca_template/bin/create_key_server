#! /bin/bash

set -eu -o pipefail

script_dir="$(dirname "$(readlink -f "$0")")"
base_dir="$(dirname "$script_dir")"

server_host_name="$1"

function load_vars() {
    local var_path="$base_dir/var"

    key_len="$(cat "$var_path/server_key_len.var")"
    key_cipher="$(cat "$var_path/server_key_cipher.var")"
}

if [ -e "$base_dir/openssl/private/$server_host_name.key.pem" ]; then
    echo "The key (\"$base_dir/openssl/private/$server_host_name.key.pem\") exists." >&2
    exit 2
fi

load_vars

if [ -n "$key_cipher" ]; then
    key_cipher_opt=-$key_cipher
else
    key_cipher_opt=
fi

openssl genrsa $key_cipher_opt -passout fd:3 \
    -out "$base_dir/openssl/private/$server_host_name.key.pem" "$key_len"

chmod 600 "$base_dir/openssl/private/$server_host_name.key.pem"
